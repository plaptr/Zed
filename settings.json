// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "file_scan_exclusions": [
        "build/*cmake*",
        "build/*CMake*",
        "build/*.ninja*",
        "dist/**",
        ".git/**",
        "**/.DS_Store",
        "**/.git",
        "**/.hg",
        "**/.svn",
        "**/node_modules",
        "**/__pycache__",
        "**/__pycache__/**",
        "**/*.egg-info",
        "**/*.egg-info/**",
        "**/.*.swp",
        "**/.coverage",
        "**/.coverage.*",
        "**/.cache",
        "**/.pytest_cache",
        "**/.mypy_cache",
        "**/.tox",
        "**/.venv",
        "**/.virtualenv",
        "**/.virtualenvs",
        "**/.env",
        "**/.direnv",
        "**/.ipython",
        "**/.docker"
    ],
    "show_edit_predictions": true,

    "features": {
        "edit_prediction_provider": "supermaven"
    },
    "agent": {
        "inline_assistant_model": {
            "provider": "google",
            "model": "gemini-2.5-flash"
        },
        "default_profile": "ask",
        "default_model": {
            "provider": "google",
            "model": "gemini-2.5-flash"
        },
        "model_parameters": []
    },
    "debugger": {
        "dock": "right"
    },
    "collaboration_panel": {
        "dock": "right"
    },
    "outline_panel": {
        "dock": "right"
    },
    "git_panel": {
        "dock": "right"
    },
    "project_panel": {
        "dock": "right"
    },
    "icon_theme": "Material Icon Theme",
    "calls": {
        "mute_on_join": true
    },
    "git": {
        "inline_blame": {
            "enabled": false
        }
    },
    "zoomed_padding": true,
    "active_pane_modifiers": {
        "inactive_opacity": 1.0
    },
    "use_system_window_tabs": false,
    "bottom_dock_layout": "full",
    "tab_bar": {
        "show": false
    },
    "tabs": {
        "git_status": false
    },
    "title_bar": {
        "show_project_items": true,
        "show_branch_name": true,
        "show_sign_in": false,
        "show_onboarding_banner": false,
        "show_user_picture": false,
        "show_menus": false,
        "show_branch_icon": false
    },
    "use_smartcase_search": true,
    "diagnostics": {
        "inline": {
            "enabled": true
        }
    },
    "prettier": {
        "allowed": true
    },
    "indent_guides": {
        "background_coloring": "disabled",
        "coloring": "indent_aware",
        "enabled": false
    },
    "toolbar": {
        "code_actions": false,
        "quick_actions": true,
        "breadcrumbs": true
    },
    "helix_mode": false,
    "buffer_line_height": {
        "custom": 1.1
    },
    "buffer_font_family": "Lilex",
    "terminal": {
        "font_family": "Lilex"
    },
    "base_keymap": "VSCode",
    "relative_line_numbers": true,
    "gutter": {
        "runnables": true,
        "folds": false,
        "line_numbers": true
    },
    "cursor_shape": "bar",
    "cursor_blink": false,
    "soft_wrap": "none",
    "tab_size": 4,
    "vim_mode": true,
    "ui_font_size": 16,
    "buffer_font_size": 16.0,
    "theme": "One Dark",
    "vim": {
        "use_system_clipboard": "always",
        "use_smartcase_find": true
    },
    "format_on_save": "on",
    "languages": {
        "C++": {
            "formatter": "language_server"
        }
    },

    "lsp": {
        "clangd": {
            "binary": {
                "arguments": ["--header-insertion=never"]
            }
        }
    }
}
